{% extends 'base.html.twig' %}

{% block body %}

<header style=" background-image: url({{ asset('img/todolist_homepage.jpg') }});">
    <div class="container">
        <div class="intro-text">
            <div class="intro-heading text-uppercase">Bienvenue sur ToDo List</div>
            <div class="intro-lead-in">l'application vous permettant de gérer l'ensemble de vos tâches sans effort !
            </div>
        </div>
    </div>
</header>

<div class="container mt-4">

    <div class="row justify-content-md-center mt-4">
        <div class="p-2">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Ajouter</h5>
                    <p class="card-text">Ajouter une tâche</p>
                    <a href="{{ path('task_create') }}" class="btn btn-success">Créer une tâche</a>
                </div>
            </div>
        </div>
        <div class="p-2">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Tâches</h5>
                    <p class="card-text">Voir l'ensemble des tâches</p>
                    <a href="{{ path('task_list') }}" class="btn btn-info">Consulter la liste</a>
                </div>
            </div>
        </div>
    <div class="p-2">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Terminé</h5>
                <p class="card-text">Voir la liste des tâches terminées</p>
                <a href="{{ path('task_listisdone') }}" class="btn btn-secondary">Consulter la liste</a>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}